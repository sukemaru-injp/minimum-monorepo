{
	"name": "minimum-monorepo",
	"version": "1.0.0",
	"description": "A minimal monorepo setup",
	"scripts": {
		"dev": "turbo run dev --filter=./apps/* --only",
		"dev:api": "pnpm --filter wellness-api dev",
		"dev:console": "pnpm --filter management-console dev",
		"build": "turbo run build",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"format": "turbo run format",
		"check": "turbo run check",
		"gen:openapi": "pnpm --filter wellness-api gen:openapi",
		"apply:db-migration": "psqldef -U wellness -p 5432 -h localhost --password=wellness_dev_pass wellness_database_local < shared/schema.sql"
	},
	"private": true,
	"author": "sukemaru-injp",
	"packageManager": "pnpm@10.11.0",
	"engines": {
		"node": ">=22.0.0"
	},
	"devDependencies": {
		"turbo": "^2.5.8",
		"@biomejs/biome": "^2.2.5"
	}
}
