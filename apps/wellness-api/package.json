{
	"name": "wellness-api",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"serve": "tsx watch src/server.ts",
		"typecheck": "tsc --noEmit",
		"build": "tsc --noEmit && ESBUILD_ENTRY=all node ./scripts/run-esbuild.mjs",
		"start": "node dist/server.js",
		"build:lambda": "ESBUILD_ENTRY=handler node ./scripts/run-esbuild.mjs",
		"zip": "zip -j lambda.zip dist/handler.js",
		"update": "aws lambda update-function-code --zip-file fileb://lambda.zip --function-name wellness-api",
		"deploy": "run-s build zip update",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"check": "biome check --write",
		"gen:openapi": "node --import tsx/esm scripts/generate-openapi.ts",
		"gen:db-type": "kysely-codegen --dialect postgres --out-file src/db/db.d.ts"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.5",
		"@hono/zod-openapi": "^1.1.4",
		"@minimum-monorepo/shared-lib": "workspace:^",
		"@serverless/typescript": "^4.20.2",
		"esbuild": "^0.25.11",
		"hono": "^4.9.10",
		"kysely": "^0.27.4",
		"neverthrow": "^8.2.0",
		"npm-run-all2": "^8.0.4",
		"pg": "^8.11.5",
		"zod": "^4.1.12",
		"zod-openapi": "^5.4.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@types/node": "^20.11.17",
		"@types/pg": "^8.15.5",
		"kysely-codegen": "^0.19.0",
		"tsx": "^4.7.1",
		"typescript": "^5.9.3",
		"yaml": "^2.8.1"
	}
}
