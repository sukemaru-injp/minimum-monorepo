{
	"name": "wellness-api",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"build": "tsc",
		"start": "node dist/server.js",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"check": "biome check --write",
		"gen:openapi": "node --import tsx/esm scripts/generate-openapi.ts",
		"apply:db-migrations": "psqldef -U wellness -p 5432 -h localhost --password=wellness_dev_pass wellness_database_local < shared/schema.sql"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.5",
		"@hono/zod-openapi": "^1.1.3",
		"@minimum-monorepo/shared-lib": "workspace:^",
		"hono": "^4.9.10",
		"neverthrow": "^8.2.0",
		"zod": "^4.1.12",
		"zod-openapi": "^5.4.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@types/node": "^20.11.17",
		"tsx": "^4.7.1",
		"typescript": "^5.9.3",
		"yaml": "^2.8.1"
	}
}
